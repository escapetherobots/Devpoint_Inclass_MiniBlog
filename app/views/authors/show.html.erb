<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @author.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @author.last_name %>
</p>

<p>
  <b>Username:</b>
  <%= @author.username %><br />
  <div id="twitter_bird"></div><%= link_to "@#{@author.twitter}", @author.twitter_link, target: '_blank' %>
</p>

<p>
  <b>Bio:</b>
  <%= simple_format(@author.bio) %>
</p>

<p>
  <b>Email:</b>
  <%= mail_to @author.email %>
</p>

<p>
  <b>Twitter:</b>
  <%= @author.twitter %>
</p>

<h3> <%= @author.first_name %>'s posts</h3>
<% @author.posts.each do |post| %>
    <h2><%= post.title %></h2>
    <%= link_to post.title.titleize, post %>
    <%= post.body %>
    
    <%= post.published_at %>
  
  
<% end %>


<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Back', authors_path %>
