<h1>Listing posts</h1>



<% @posts.each do |post| %>
    <h2><%= post.title %></h2>
    <%= post.title %>
    <%= post.body %>
    <%= post.author_name %>
    <%= post.published_at %>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  
<% end %>


<%= link_to 'New Post', new_post_path %>
